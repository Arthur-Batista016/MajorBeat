<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MajorBeat.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MajorBeat.Views"
    Shell.FlyoutBehavior="Disabled"
    
 >

    <ShellContent
    ContentTemplate="{DataTemplate local:MusicianHomePage}"
    Route="MusicianHomePage"/>

    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems">

    <ShellContent Icon="home.png"
                 ContentTemplate="{DataTemplate local:MusicianHomePage}" Route="MainPage"/>

    <ShellContent Icon="searchhome.png"
                 ContentTemplate="{DataTemplate local:SearchPage}" />

    <ShellContent  Icon="chathome.png"
               ContentTemplate="{DataTemplate local:ChatPage}"/>

    <ShellContent Icon="calendar.png"
               ContentTemplate="{DataTemplate local:CalendarPage}"/>
    
    <ShellContent Icon="profilehome.png"
            ContentTemplate="{DataTemplate local:ProfilePage}"/>


    </FlyoutItem>


</Shell>
